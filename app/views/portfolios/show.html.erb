<p id="notice"><%= notice %></p>

<div class="col-xs-12 pull-left">
  <div class="pull-left">
    <h1 class="inline-text">
      <%= @portfolio.name %>
    </h1>
    <%= link_to 'Edit', edit_portfolio_path(@portfolio), class: 'btn btn-xs btn-primary inline-text' %>
  </div>
  <div class="pull-right">
    <h1 class="inline-text"></h1>
    <%= link_to 'View transactions history', portfolio_deals_path(@portfolio), class: 'btn btn-default inline-text' %>

  </div>
</div>

<div class="col-xs-6 text-right">
</div>

<div class="col-xs-12">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Stock name</th>
        <th class="text-right">Quantity</th>
        <th class="text-right">Current price (USD)</th>
        <th class="text-right">Total (USD)</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @portfolio_stock_amount.each do |sa| %>
        <tr>
          <td><%= sa[0].name %></td>
          <td class="text-right"><%= sa[1] %></td>
          <td class="text-right"><%= sa[0].price %></td>
          <td class="text-right"><%= sa[1] * sa[0].price %></td>
          <td class="text-right"><%= link_to 'View stock history', sa[0], class: 'btn btn-xs btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

