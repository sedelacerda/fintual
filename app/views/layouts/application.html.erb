<!DOCTYPE html>
<html>
  <head>
    <title>Fintual</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if (params[:controller] == 'portfolios' and params[:id].present?) or (params[:controller] == 'deals' and params[:portfolio_id].present?) %>
            <% p = Portfolio.find(params[:id] || params[:portfolio_id]) %>
            <%= link_to p.name, p, class: "navbar-brand" %>
          <% end %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if ['portfolios', 'deals'].include?(params[:controller]) %>"><%= link_to 'Portfolios', portfolios_path %></li>
            <li class="<%= 'active' if params[:controller] == 'stocks' %>"><%= link_to 'Stocks', stocks_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>
    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
