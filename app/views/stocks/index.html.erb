<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-right">Price (USD)</th>
      <th colspan="2" class="text-right"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td class="text-right"><%= '%.2f' % stock.price %></td>
        <td class="text-right"><%= link_to 'Last month', stock %></td>
        <td class="text-right"><%= link_to 'Last year', stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>
