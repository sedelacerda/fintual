<%= form_with(model: deal, local: true, url: portfolio_deals_path(id: portfolio)) do |form| %>
  <% if deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deal.errors.count, "error") %> prohibited this deal from being saved:</h2>

      <ul>
      <% deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :stock_id %>
    <%= form.select(:stock_id, Stock.all.collect {|s| [s.name, s.id]}, {} ,{class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :deal_amount, class: 'form-control' %>
  </div>



  <div class="form-group">
    <div class="pull-left">
      Buy <%= form.radio_button :is_sale, false %>
      Sell <%= form.radio_button :is_sale, true %>
    </div>
    <div class="pull-right">
      <%= form.submit 'Trade', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
