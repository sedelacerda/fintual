<p id="notice"><%= notice %></p>

<h1>Transactions history</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Stock</th>
      <th class="text-right">Transaction type</th>
      <th class="text-right">Amount</th>
      <th class="text-right">Price at transaction (USD)</th>
      <th class="text-right">Total (USD)</th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.created_at.strftime("%d/%m/%y at %H:%M") %></td>
        <td><%= deal.stock.name %></td>
        <td class="text-right <%= deal.trx_type.downcase %>-color"><b><%= deal.trx_type %></b></td>
        <td class="text-right"><%= deal.amount.abs%></td>
        <td class="text-right"><%= deal.stock.price(deal.created_at).round(2) %></td>
        <td class="text-right"><%= (deal.amount * deal.stock.price(deal.created_at)).round(2).abs %></td>
      </tr>
    <% end %>
  </tbody>
</table>
