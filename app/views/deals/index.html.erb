<p id="notice"><%= notice %></p>

<h1>Transactions history</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Stock</th>
      <th class="text-right">Transaction type</th>
      <th class="text-right">Amount</th>
      <th class="text-right">Price at transaction (USD)</th>
      <th class="text-right">Total (USD)</th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.stock.name %></td>
        <td class="text-right"><%= deal.trx_type %></td>
        <td class="text-right"><%= deal.amount.abs %></td>
        <td class="text-right"><%= deal.stock.price(deal.created_at) %></td>
        <td class="text-right"><%= (deal.amount * deal.stock.price(deal.created_at)).abs %></td>
      </tr>
    <% end %>
  </tbody>
</table>
