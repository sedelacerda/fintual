<p id="notice"><%= notice %></p>

<h1>Transactions history</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Stock</th>
      <th>Amount</th>
      <th>Price at transaction (USD)</th>
      <th>Total (USD)</th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.stock.name %></td>
        <td><%= deal.amount %></td>
        <td><%= deal.stock.price(deal.created_at) %></td>
        <td><%= deal.amount * deal.stock.price(deal.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
